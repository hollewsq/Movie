<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bitmap">


    <ImageView
        android:id="@+id/imgphone"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_150"
        android:src="@mipmap/log_icon_phone_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/phone"
        app:layout_constraintBottom_toBottomOf="@id/phone"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pwd"/>

    <ImageView
        android:id="@+id/imglock"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/log_icon_lock_default"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toLeftOf="@id/pwd"
        app:layout_constraintBottom_toBottomOf="@id/phone"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/log_icon_eye"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintRight_toRightOf="@id/pwd"
        app:layout_constraintBottom_toBottomOf="@id/phone"/>

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toLeftOf="@id/pwd"/>

    <CheckBox
        android:id="@+id/automatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动登录"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintLeft_toRightOf="@id/remember"/>

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/pwd"
        app:layout_constraintRight_toRightOf="@id/pwd"
        app:layout_constraintBottom_toTopOf="@id/login"/>

    <Button
        android:id="@+id/login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:background="@drawable/login"
        android:layout_marginTop="@dimen/dp_130"
        app:layout_constraintTop_toBottomOf="@id/reg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_2"
        android:background="@color/hui"
        android:layout_marginTop="@dimen/dp_46"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toLeftOf="@id/login"/>

    <TextView
        android:id="@+id/weixinLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方账号快速登录"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/hui"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weixin"/>

    <View
        android:id="@+id/v2"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_2"
        android:background="@color/hui"
        android:layout_marginTop="@dimen/dp_46"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintRight_toRightOf="@id/login" />

    <ImageView
        android:id="@+id/weixin"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/log_icon_weixin_default"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/weixinLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>