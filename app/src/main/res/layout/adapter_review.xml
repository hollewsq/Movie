<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">




        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/filmreview_heard"
                app:roundAsCircle="true"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:id="@+id/filmreview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/filmreview_heard"
                android:text="123"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:id="@+id/filmreview_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_marginTop="@dimen/dp_12"
            android:text="123123"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chaxunpinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filmreview_pinglun"
            android:layout_marginLeft="@dimen/dp_30"/>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chaxunpinglun">

            <TextView
                android:id="@+id/filmreview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="12311111111111111111111"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />




            <RelativeLayout
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_50">

                <CheckBox
                    android:id="@+id/dianzancheckbox"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:button="@null"
                    android:background="@drawable/red_bright"/>

                <TextView
                    android:id="@+id/film_text_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="12"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp">

                <ImageView
                    android:id="@+id/pingluncheckbox"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:button="@null"
                    android:src="@mipmap/com_icon_comment_default" />

                <TextView
                    android:id="@+id/filmreview_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="123"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/filmreview_time"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>