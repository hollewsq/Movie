<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hot_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门电影"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xian"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/moviefragment_shu"
        app:layout_constraintTop_toBottomOf="@id/hot_move"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/hot_move_jiantou"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@mipmap/com_icon_next_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/heat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/hot_move"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/hot_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在热映"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@id/heat"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xian1"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/moviefragment_shu"
        app:layout_constraintTop_toBottomOf="@id/hot_now"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/hot_now_jiantou"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/com_icon_next_default"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/showheat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/hot_now"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/coming_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="即将上映"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@id/showheat"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xian2"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@drawable/moviefragment_shu"
        app:layout_constraintTop_toBottomOf="@id/coming_move"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/coming_move_jiantou"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@mipmap/com_icon_next_default"
        app:layout_constraintTop_toBottomOf="@id/showheat"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/soon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/coming_move"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>