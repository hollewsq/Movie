<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/my_bj"
        android:layout_height="@dimen/dp_220">
        <ImageView
            android:id="@+id/mine_sound"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/my_icon_remind_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mine_head"
                android:layout_width="@dimen/dp_72"
                app:roundedCornerRadius="@dimen/dp_50"
                android:layout_height="@dimen/dp_72"
                app:roundAsCircle="true"
                app:placeholderImage="@mipmap/tou"/>
            <TextView
                android:id="@+id/mine_name"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="冬天来了"/>
            <Button
                android:id="@+id/qiandao"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_28"
                android:text="签到"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/yuanjiao" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/mine_myinfo"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/my_icon_messiage_default"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_height="wrap_content"
                    android:text="我的信息"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_like"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/my_icon_attention_default"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="我的关注"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_bypiao"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/my_icon_rccord_default"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="购票记录"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_90">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5px"
            app:cardBackgroundColor="#FFFFFDFD"
            android:layout_height="@dimen/dp_86">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_yijian"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/my_icon_feedback_default"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/mine_update"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/my_icon_version_default"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="最新版本"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/out"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/my_icon_logout_default"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:text="最新版本"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="©八维移动通讯学院毕业作品"/>
</LinearLayout>
