<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_20">


    <RelativeLayout
        android:id="@+id/aaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_129"
        android:background="@mipmap/mvitem"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_14"
                    android:text="电影名称"/>

                <CheckBox
                    android:id="@+id/attention"
                    android:button="@null"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_toRightOf="@id/name"
                    android:background="@drawable/collection" />

            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12"
                android:paddingBottom="@dimen/dp_10"
                android:text="内容简介"/>
        </LinearLayout>
    </RelativeLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hot_item_image"
        app:roundedCornerRadius="@dimen/dp_5"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_129"
        android:layout_marginLeft="@dimen/dp_10" />

    <ImageView
        android:layout_marginTop="@dimen/dp_150"
        android:background="@mipmap/fline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7" />
</RelativeLayout>