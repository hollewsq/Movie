<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/id_details">


        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/yugaopian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影评"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:id="@+id/lineone"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_3"
                    android:layout_below="@+id/yugaopian"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@drawable/moviefragment_shu" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/filmreview_sdv"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/com_icon_down_default" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_24">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filmreview_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-88dp"
                android:layout_marginBottom="@dimen/dp_20">

                <Button
                    android:id="@+id/commentaddbutton"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/com_icon_publish_default" />

                <Button
                    android:id="@+id/back_img"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/back"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>