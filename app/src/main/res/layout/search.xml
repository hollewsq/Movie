<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_24"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/yuanjiao">

    <ImageView
        android:id="@+id/seek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:src="@mipmap/com_icon_search_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CGV影城"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:background="@null"
        android:textColorHint="@color/white"
        android:padding="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/seek"
        app:layout_constraintRight_toLeftOf="@id/clickSearch"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/clickSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>